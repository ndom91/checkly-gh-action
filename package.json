{
  "name": "checkly-gh-action",
  "private": true,
  "version": "0.0.2",
  "description": "Checkly Monitoring-as-Code Action",
  "author": "Nico Domino <yo@ndo.dev>",
  "main": "index.js",
  "scripts": {
    "format": "prettier-standard index.js && standard index.js",
    "build": "ncc build index.js",
    "version": "npm run build && git add dist",
    "release": "np && git tag -f $npm_package_version && git push --tags -f"
  },
  "keywords": [
    "Action",
    "Github",
    "Checkly"
  ],
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "isomorphic-unfetch": "^3.1.0",
    "yaml-lint": "^1.2.4"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.25.1",
    "husky": "^4.3.0",
    "np": "^7.0.0",
    "prettier-standard": "^16.4.1",
    "standard": "^16.0.2"
  },
	"husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run build"
		}
	}
}
